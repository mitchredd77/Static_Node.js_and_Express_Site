extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
        .project-info-box.box
          // Project title with interpolation
          h1 #{project.project_name}

          // Project description with interpolation
          p #{project.description}

        .project-tech-links-box.box
          h6 Technologies
          ul
            each tech in project.technologies
              li #{tech}
          
        a.btn-link(href=project.live_link) Live Demo
        a.btn-link(href=project.github_link) GitHub Repo

        .project-img-box.box
          each pic in project.image_urls
            img.project-img(src=pic, alt='Picture of Project')

    nav.nav
      a(href='/')
        span &larr;
        |  Back
